<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/styleheader.css" />
    <link rel="stylesheet" href="/stylesheets/styleform.css" />
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link href="https://fonts.googleapis.com/css?family=Quicksand:300,400,500,700" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
    <title><%= title%></title>
</head>

<body>
<!--header-->
<%include header.ejs%>
<!--end header-->
<!--body-->
<div class="container">
    <div class="row" style="padding-top: 100px">
        <div class="col-3">
            <form class="form-price1">
                <h5>TÌM THEO GIÁ</h5>
                <hr/>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                    <label class="form-check-label" for="defaultCheck1">
                        Dưới 100.000$
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="defaultCheck2">
                    <label class="form-check-label" for="defaultCheck2">
                        100.000$ - 500.000$
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="defaultCheck2">
                    <label class="form-check-label" for="defaultCheck2">
                        500.000$ - 1.000.000$
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="defaultCheck2">
                    <label class="form-check-label" for="defaultCheck2">
                        1.000.000$ - 2.000.000$
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="defaultCheck2">
                    <label class="form-check-label" for="defaultCheck2">
                        Trên 2.000.000$
                    </label>
                </div>
            </form>
            <form class="form-car-suggest">
                <h5>XE GỢI Ý</h5>
                <hr/>
                <div class="media">
                    <div class="media-left">
                        <img src="/images/buggati.png" class="media-object" style="width:60px">
                    </div>
                    <div class="media-body">
                        <h6 class="media-heading">Buggati Veyron</h6>
                        <p>1.200.000$</p>
                    </div>
                </div>
                <hr/>
                <div class="media">
                    <div class="media-left">
                        <img src="/images/lamborghini.png" class="media-object" style="width:60px">
                    </div>
                    <div class="media-body">
                        <h6 class="media-heading">Lamborghini</h6>
                        <p>1.900.000$</p>
                    </div>
                </div>
                <hr/>
                <div class="media">
                    <div class="media-left">
                        <img src="/images/ferrari.png" class="media-object" style="width:60px">
                    </div>
                    <div class="media-body">
                        <h6 class="media-heading">Ferrari</h6>
                        <p>1.300.000$</p>
                    </div>
                </div>
                <hr/>
                <div class="media">
                    <div class="media-left">
                        <img src="/images/rollroyce.png" class="media-object" style="width:60px">
                    </div>
                    <div class="media-body">
                        <h6 class="media-heading">Roll royces</h6>
                        <p>1.500.000$</p>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-9">
            <h5>Sản phẩm xe đẹp</h5>
            <div class="row">
                <%list_product.forEach(function (row) {%>
                    <span>
                        <form class="form_product" >
                            <img src="<%=row.filepathanh%>" width="200px" height="150px">
                            <br>
                            <a class="text-center" style="color: black" href="/detail_product/<%=row.id%>"><%=row.ten%></a>
                            <br>
                            <span style="color: #FFD700; font-size: 18px"><%= row.giaban%>
                                <button class="btn_cart">
                                    <i class="fas fa-cart-plus" style="font-size:14px;"></i>
                                </button>
                            </span>
                        </form>
                    </span>
                <%})%>

        </div>
    </div>
</div>
</div>
<!--end body-->
<%include footer.ejs%>
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</body>
</html>